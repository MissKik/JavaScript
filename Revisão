const readline = require('readline-sync'); //criando pacote para receber dados (entrada)

nome = readline.question("Digite o seu nome: ");
idade = readline.questionInt("Digite sua idade: ");

console.log(nome+" tem "+ idade+" anos"); //comando para aparecer na tela, sem ser nenhuma pergunta

